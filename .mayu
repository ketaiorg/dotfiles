# .mayu for VAIO-P(VPCP11AKJ)
# 前提 OS側のコントロールパネルで以下の設定が行われていること
#  CapsLockとControlキーを入れ替える
#
include "linux104.mayu"
keymap Global

# NumLockをCapsLockに
key *NumLock = CapsLock

# 検索
key M-f = C-F

# Emacs風の移動
key C-A = Home
key S-C-A = S-Home
key C-E = End
key S-C-E = S-End
key C-F = Right
key S-C-F = S-Right
key C-B = Left
key S-C-B = S-Left
key C-P = Up
key S-C-P = S-Up
key C-N = Down
key S-C-N = S-Down

# Quoteが打てなくなるので代用
key C-Quote = Quote
mod mod0 = !Left
mod mod0 = !Down
mod mod0 = !Right
key M0-Left = Quote

# Fn+l.キーでHHK風にPageUp,PageDown、Shiftキーにも対応
key Num3 = PageUp
key NumPeriod = PageDown
key S-Num3 = S-PageUp
key S-NumPeriod = S-PageDown

# PageUp,PageDown,Home,EndキーはShiftに
mod shift += PageUp
key *PageUp = *RightShift
mod shift += PageDown
key *PageDown = *RightShift
mod shift += Home
key *Home = *RightShift
mod shift += End
key *End = *RightShift

# カーソルキーはShiftに
mod shift += Up
key *Up = *RightShift
mod shift += Down
key *Down = *RightShift
mod shift += Left
key *Left = *RightShift
mod shift += Right
key *Right = *RightShift

# Fn+[;/キーでHHK風にカーソル移動、Shift+カーソルも利用
key NumEnter = Up
key NumPlus = Down
key Quote = Right
key NumMinus = Left
key S-NumEnter = S-Up
key S-NumPlus = S-Down
key S-Quote = S-Right
key S-NumMinus = S-Left

# 右Altキー+hjklでカーソル移動、Shift+カーソルも利用
mod alt -= RightAlt
mod mod1 = !RightAlt
key M1-h = Left
key M1-j = Down
key M1-k = UP
key M1-l = Right
key S-M1-h = S-Left
key S-M1-j = S-Down
key S-M1-k = S-UP
key S-M1-l = S-Right
